<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>${project.artifactId}-${project.version}</baseDirectory>
    <includeBaseDirectory>true</includeBaseDirectory>
    <includeSiteDirectory>false</includeSiteDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>src/assembly/scripts/unix</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>startAgent.sh</include>
                <include>setup-classpath.sh</include>
            </includes>
            <filtered>true</filtered>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/assembly/scripts/windows</directory>
            <outputDirectory>bin/windows</outputDirectory>
            <includes>
                <include>startAgent.cmd</include>
                <include>startConsole.cmd</include>
                <include>setup-classpath.cmd</include>
            </includes>
            <filtered>true</filtered>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>*.properties</include>     
                <include>*.scala</include>
            </includes>            
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/test-data</directory>
            <outputDirectory>conf/testData</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
        
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.zip</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
        
    </fileSets>
</assembly>
